<Window x:Class="TPV_Gastronomico.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TPV Gastronomikoa" Height="400" Width="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock x:Name="WelcomeText" FontSize="16" FontWeight="Bold" Margin="0,0,0,20"/>

            <!-- Botones principales -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10">
                <Button x:Name="BtnUsuarios" Content="Erabiltzaileak" Width="100" Margin="5" Click="BtnUsuarios_Click"/>
                <Button x:Name="BtnStock" Content="Stock" Width="100" Margin="5" Click="BtnStock_Click"/>
                <Button x:Name="BtnReservas" Content="Erreserbak" Width="100" Margin="5" Click="BtnReservas_Click"/>
                <Button x:Name="BtnTickets" Content="Txartelak" Width="100" Margin="5" Click="BtnTickets_Click"/>
                <Button x:Name="BtnCerrarSesion" Content="Itxi saioa" Width="100" Margin="5" Click="BtnCerrarSesion_Click"/>

            </StackPanel>
        </StackPanel> 
        
    </Grid>
</Window>
