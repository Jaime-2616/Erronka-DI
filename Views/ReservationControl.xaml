<UserControl x:Class="TPV_Gastronomico.Views.ReservationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300">

    <Border Padding="8" Background="Transparent">
        <StackPanel>

            <!-- Mota -->
            <TextBlock Text="Mota"/>
            <ComboBox x:Name="cbTipoComida" Margin="0,2,0,6"/>

            <!-- Data eta ordua -->
            <Grid Margin="0,0,0,6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Data"/>
                    <DatePicker x:Name="dpFecha"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="6,0,0,0">
                    <TextBlock Text="Ordua"/>
                    <ComboBox x:Name="cbHora" Width="60"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Margin="6,0,0,0">
                    <TextBlock Text="Minutua"/>
                    <ComboBox x:Name="cbMinuto" Width="60"/>
                </StackPanel>
            </Grid>

            <!-- Pertsonak -->
            <TextBlock Text="Pertsonak"/>
            <TextBox x:Name="txtNumPersonas" Width="80" Margin="0,2,0,6"/>

            <!-- Mahaiak bilatu -->
            <Button x:Name="BtnBuscarMesas"
                    Content="Mahaiak bilatu"
                    Margin="0,0,0,4"/>

            <TextBlock x:Name="txtInfoMesa" Margin="0,0,0,6"/>

            <!-- Mahaia -->
            <TextBlock Text="Mahaia"/>
            <ComboBox x:Name="cbMesa"
                      DisplayMemberPath="Numero"
                      Margin="0,2,0,6"/>

            <DataGrid x:Name="dgMesasDisponibles"
                      AutoGenerateColumns="False"
                      Height="120"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Zenb." Binding="{Binding Numero}" Width="*"/>
                    <DataGridTextColumn Header="Edukiera" Binding="{Binding Capacidad}" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Botoiak -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,8,0,0">
                <Button x:Name="BtnCrearReserva"
                        Content="Erreserba sortu"
                        Width="120"
                        Margin="4,0"
                        Background="Green"
                        Foreground="White"/>
                <Button x:Name="BtnCancelar"
                        Content="Itxi"
                        Width="80"
                        Margin="4,0"/>
            </StackPanel>

        </StackPanel>
    </Border>
</UserControl>
