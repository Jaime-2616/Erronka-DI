<Window x:Class="TPV_Gastronomico.Views.ReservasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Erreserben kudeaketa" Height="700" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Background="LightBlue">
            <TextBlock Text="Erreserben kudeaketa" FontSize="20" FontWeight="Bold" Margin="10"/>
            <TextBlock x:Name="txtTitulo" FontSize="14" Margin="20,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Contenido principal -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- Pestaña: Mis Reservas -->
            <TabItem Header="Erreserbak">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid x:Name="dgMisReservas" AutoGenerateColumns="False" Margin="10"
                             SelectionMode="Single" Grid.Row="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Mahai" Binding="{Binding Mesa.Numero}" Width="80"/>
                            <DataGridTextColumn Header="Data" Binding="{Binding Fecha, StringFormat=dd/MM/yyyy HH:mm}" Width="120"/>
                            <DataGridTextColumn Header="Pertsona kop." Binding="{Binding NumPersonas}" Width="80"/>
                            <DataGridTextColumn Header="Erabiltzailea" Binding="{Binding Usuario.Nombre}" Width="120"/>
                            <DataGridTemplateColumn Header="Ekintzak" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="Ezeztatu" Click="BtnCancelarReserva_Click"
                                                    Margin="2" Padding="5" Background="Red" Foreground="White"
                                                    ToolTip="Erreserba hau bertan behera utzi"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
                        <Button Content="Eguneratu" Click="BtnActualizar_Click" Margin="5" Width="80"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Pestaña: Nueva Reserva -->
            <TabItem Header="Erreserba berria">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="20" Width="350">
                        <Label Content="Data:" FontWeight="Bold"/>
                        <DatePicker x:Name="dpFecha" SelectedDate="{Binding Fecha}" Margin="0,5,0,10"/>

                        <Label Content="Ordua:" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,10">
                            <ComboBox x:Name="cbHora" Width="80" SelectedIndex="0">
                                <ComboBoxItem Content="13:00"/>
                                <ComboBoxItem Content="14:00"/>
                                <ComboBoxItem Content="15:00"/>
                                <ComboBoxItem Content="20:00"/>
                                <ComboBoxItem Content="21:00"/>
                                <ComboBoxItem Content="22:00"/>
                            </ComboBox>
                            <ComboBox x:Name="cbMinuto" Width="0" Margin="10,0,0,0" SelectedIndex="0">
                                <ComboBoxItem Content="00"/>
                                <ComboBoxItem Content="15"/>
                                <ComboBoxItem Content="30"/>
                                <ComboBoxItem Content="45"/>
                            </ComboBox>
                        </StackPanel>

                        <Label Content="Pertsona kopurua:" FontWeight="Bold"/>
                        <TextBox x:Name="txtNumPersonas" Text="2" Margin="0,5,0,10"/>

                        <Label Content="Mahai:" FontWeight="Bold"/>
                        <ComboBox x:Name="cbMesa" DisplayMemberPath="Numero"
                                 ToolTipService.ToolTip="{Binding Capacidad, StringFormat=Ahalmena: {0} pertsona}"
                                 Margin="0,5,0,10"/>

                        <TextBlock x:Name="txtInfoMesa" Margin="0,5,0,10" Foreground="Blue" FontWeight="SemiBold"/>

                        <Button Content="Eskuragarri dauden mahaiak bilatu" Click="BtnBuscarMesas_Click"
                                Margin="0,10,0,5" Background="LightGreen" FontWeight="Bold" Height="30"/>
                        <Button Content="Erreserba sortu" Click="BtnCrearReserva_Click"
                                Margin="0,5,0,0" Background="Green" Foreground="White" FontWeight="Bold" Height="35"/>
                    </StackPanel>
                    <ComboBox x:Name="cbTipoComida" DisplayMemberPath="Value" SelectedValuePath="Key" Margin="0,0,0,0" Width="0"/>

                    <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Margin="10" Background="WhiteSmoke">
                        <StackPanel Margin="10" Width="300">
                            <TextBlock Text="Eskuragarri dauden mahaiak - informazioa" FontWeight="Bold" Margin="0,0,0,10"/>
                            <DataGrid x:Name="dgMesasDisponibles" AutoGenerateColumns="False" Height="300">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Mahai" Binding="{Binding Numero}" Width="60"/>
                                    <DataGridTextColumn Header="Ahalmena" Binding="{Binding Capacidad}" Width="80"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="Itxi" Click="BtnCerrar_Click" Margin="5" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
