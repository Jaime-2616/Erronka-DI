<Window x:Class="TPV_Gastronomico.Views.TicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Txartela / Erosketa" Height="520" Width="700" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="160"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="ProductosGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Izena" Binding="{Binding Nombre}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Prezioa" Binding="{Binding Precio, StringFormat=C}" IsReadOnly="True" Width="100"/>
                <DataGridTextColumn Header="Eskuragarri" Binding="{Binding Disponible}" IsReadOnly="True" Width="90"/>
                <DataGridTemplateColumn Header="Kopurua" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding SelectedQuantity, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" Width="80"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,0">
                <Button x:Name="BtnGenerar" Content="Generar Tixeta" Width="120" Click="BtnGenerar_Click"/>
                <Button x:Name="BtnCerrar" Content="Itxi" Width="80" Click="BtnCerrar_Click"/>
            </StackPanel>

            <TextBox x:Name="PreviewBox" Margin="0,10,0,0" Height="60" IsReadOnly="True" TextWrapping="Wrap"/>

            <TextBlock x:Name="TotalText" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>