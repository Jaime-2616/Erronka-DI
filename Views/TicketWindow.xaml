<Window x:Class="TPV_Gastronomico.Views.TicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Txartela / Erosketa" Height="520" Width="700" WindowStartupLocation="CenterOwner"
        xmlns:views="clr-namespace:TPV_Gastronomico.Views">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="160"/>
        </Grid.RowDefinitions>

        <!-- Products shown as boxes instead of a DataGrid -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ProductsPanel" ItemsSource="{Binding}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <views:ProductItemControl SelectQuantityRequested="SelectQuantity_Click"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Top">
                <TextBlock VerticalAlignment="Center" Text="Erreserbak:" Margin="0,0,6,0"/>
                <ComboBox x:Name="cbReservas" Width="300" HorizontalAlignment="Left" DisplayMemberPath="Mesa.Numero"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="8,0,0,0">
                    <Button x:Name="BtnGenerar" Content="Sortu txartela" Width="120" Click="BtnGenerar_Click"/>
                    <Button x:Name="BtnImprimir" Content="Imprimatu PDF" Width="110" Margin="8,0,0,0" Click="BtnImprimir_Click"/>
                    <Button x:Name="BtnCerrar" Content="Itxi" Width="80" Margin="8,0,0,0" Click="BtnCerrar_Click"/>
                </StackPanel>
            </StackPanel>

            <TextBox x:Name="PreviewBox" Margin="0,10,0,0" Height="60" IsReadOnly="True" TextWrapping="Wrap"/>

            <TextBlock x:Name="TotalText" FontWeight="Bold" FontSize="16" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>