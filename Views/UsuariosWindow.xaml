<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="TPV_Gastronomico.Views.UsuariosWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Erabiltzaileen Kudeaketa" Height="480" Width="950">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Barra bilaketa -->
		<StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
			<TextBox x:Name="SearchBox" Width="300" ToolTip="Izena edo erabiltzaile izena bilatu" />
			<Button Content="Bilatu" Click="Buscar_Click" Margin="8,0"/>
			<Button Content="Denak erakutsi" Click="Refrescar_Click" Margin="8,0"/>
		</StackPanel>

		<!-- DataGrid -->
		<DataGrid x:Name="UsuariosGrid" Grid.Row="1" AutoGenerateColumns="False"
                  CanUserAddRows="False" IsReadOnly="True" SelectionMode="Single"
                  SelectionChanged="UsuariosGrid_SelectionChanged">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="60"/>
				<DataGridTextColumn Header="Izena" Binding="{Binding Nombre}" Width="2*"/>
				<DataGridTextColumn Header="Erabiltzaile izena" Binding="{Binding Username}" Width="*"/>
				<DataGridTextColumn Header="Rol" Binding="{Binding Rol}" Width="100"/>
			</DataGrid.Columns>
		</DataGrid>

		<!-- Formulario -->
		<Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="1" Padding="8" Margin="0,8,0,0">
			<StackPanel Orientation="Horizontal">
				<StackPanel Width="320">
					<TextBlock>Izena</TextBlock>
					<TextBox x:Name="NombreBox"/>

					<TextBlock Margin="0,6,0,0">Erabiltzaile izena</TextBlock>
					<TextBox x:Name="UsernameBox"/>
				</StackPanel>

				<StackPanel Width="220" Margin="12,0,0,0">
					<TextBlock>Pasahitza (hutsik utzi ez aldatzeko)</TextBlock>
					<PasswordBox x:Name="PasswordBox"/>

					<TextBlock Margin="0,6,0,0">Rol</TextBlock>
					<ComboBox x:Name="RolCombo" Width="140">
						<ComboBoxItem Content="Admin"/>
						<ComboBoxItem Content="Erabiltzailea"/>
					</ComboBox>
				</StackPanel>

				<StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="12,0,0,0">
					<Button Content="Gehitu" Width="100" Click="Anadir_Click" Margin="0,0,6,0"/>
					<Button Content="Eguneratu" Width="100" Click="Actualizar_Click" Margin="0,0,6,0"/>
					<Button Content="Ezabatu" Width="100" Click="Eliminar_Click"/>
				</StackPanel>
			</StackPanel>
		</Border>
	</Grid>
</Window>
