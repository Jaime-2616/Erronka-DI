<Window x:Class="TPV_Gastronomico.Views.ReservationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crear Reserva" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Tipo de comida:"/>
            <ComboBox x:Name="cbTipoComida" Margin="0,4,0,8" Width="150"/>

            <!-- Fecha y hora en columnas separadas para acortar horizontalmente -->
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="Fecha:"/>
                        <DatePicker x:Name="dpFecha" Width="120" Margin="0,4,8,0"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Hora:"/>
                        <ComboBox x:Name="cbHora" Width="60" Margin="0,4,8,0"/>
                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Minuto:"/>
                        <ComboBox x:Name="cbMinuto" Width="60" Margin="0,4,8,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Personas:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtNumPersonas" Width="50" Margin="8,0,0,0"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,8,0,8">
                <Button x:Name="BtnBuscarMesas" Content="Buscar mesas" Width="110" Click="BtnBuscarMesas_Click"/>
                <TextBlock x:Name="txtInfoMesa" Margin="8,6,0,0"/>
            </StackPanel>

            <TextBlock Text="Mesas disponibles:"/>
            <ComboBox x:Name="cbMesa" DisplayMemberPath="Numero" Width="120" Margin="0,4,0,8"/>

            <DataGrid x:Name="dgMesasDisponibles" AutoGenerateColumns="False" Height="140" IsReadOnly="True" Width="300">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                    <DataGridTextColumn Header="Num" Binding="{Binding Numero}" Width="*"/>
                    <DataGridTextColumn Header="Capacidad" Binding="{Binding Capacidad}" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Crear reserva" Width="110" Margin="4,0" Click="BtnCrearReserva_Click"/>
            <Button Content="Cancelar" Width="90" Margin="4,0" Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
