<Window x:Class="TPV_Gastronomico.Views.QuantityDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kantitatea" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="12">
        <TextBlock x:Name="PromptText" Text="Kantitatea:" Margin="0,0,0,8"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="-" Width="30" Click="Decrease_Click"/>
            <TextBox x:Name="QuantityBox" Width="60" TextAlignment="Center" Margin="6,0" />
            <Button Content="+" Width="30" Click="Increase_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Width="70" Margin="4,0" Click="Ok_Click"/>
            <Button Content="Itxi" Width="70" Margin="4,0" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>